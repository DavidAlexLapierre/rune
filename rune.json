{
    "$schema": "./misc/rune.0.5.x.json",
    "default_profile": "release",
    "default_test_profile": "test_default",
    "profiles": [
        {
            "name": "release",
            "target": "rune",
            "output": "bin/{config}/{arch}",
            "arch": "windows_amd64",
            "entry": "src",
            "build_mode": "exe",
            "build_flags": [
                "-vet"
            ]
        },
        {
            "name": "mac",
            "target": "rune",
            "output": "bin/{config}/{arch}",
            "arch": "darwin_arm64",
            "entry": "src",
            "build_mode": "exe",
            "build_flags": [
                "-vet"
            ]
        },
        {
            "name": "linux",
            "target": "rune",
            "output": "bin/{config}/{arch}",
            "arch": "linux_amd64",
            "entry": "src",
            "build_mode": "exe",
            "build_flags": [
                "-vet"
            ]
        },
        {
            "name": "test_default",
            "target": "test_run",
            "output": "bin/tests/{arch}",
            "arch": "windows_amd64",
            "entry": "tests",
            "build_flags": [
                "-vet",
                "--all-packages",
                "-define:ODIN_TEST_THREADS=1",
                "-define:ODIN_TEST_PROGRESS_WIDTH=0",
                "-warnings-as-errors"
            ]
        },
        {
            "name": "test_linux",
            "target": "test_run",
            "output": "bin/tests/{arch}",
            "arch": "linux_amd64",
            "entry": "tests",
            "build_flags": [
                "-vet",
                "--all-packages",
                "-define:ODIN_TEST_THREADS=1",
                "-define:ODIN_TEST_PROGRESS_WIDTH=0",
                "-warnings-as-errors"
            ]
        },
        {
            "name": "test_macos",
            "target": "test_run",
            "output": "bin/tests/{arch}",
            "arch": "darwin_arm64",
            "entry": "tests",
            "build_flags": [
                "-vet",
                "--all-packages",
                "-define:ODIN_TEST_THREADS=1",
                "-define:ODIN_TEST_PROGRESS_WIDTH=0",
                "-warnings-as-errors"
            ]
        }
    ],
    "scripts": {
        "clean": "py ./scripts/clean.py"
    }
}